<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/navy_blue" />
            <stroke android:width="1dp" android:color="@color/navy_blue" />
            <corners android:radius="20dp" />
            <padding android:left="24dp" android:right="20dp" />

        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/alice_blue" />
            <stroke android:width="1dp" android:color="@color/alice_blue" />
            <corners android:radius="20dp" />
        </shape>
    </item>

</selector>